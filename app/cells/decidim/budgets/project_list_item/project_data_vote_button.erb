<%= action_authorized_button_to "vote",
      budget_order_line_item_path(model.budget, project_id: model),
      method: vote_button_method,
      remote: true,
      class: "button large budget-list__action #{vote_button_class}",
      data: {
        add: !resource_added?,
        disable: true,
        budget: model.budget_amount,
        allocation: resource_allocation,
        "redirect-url": resource_path
      },
      disabled: vote_button_disabled?,
      title: vote_button_label do %>
  <% if resource_added? %>
    <% total_items = model.budget.projects.count %>
    <% line_item_positions = Decidim::Budgets::LineItem.where(order: current_order).pluck(:decidim_project_id) %>
    <%= total_items - line_item_positions.find_index(model.id) %>
  <% else %>
    <%= icon("check", class: "icon--small", aria_label: vote_button_label, role: "img") %>
  <% end %>
<% end %>
